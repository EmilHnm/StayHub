@{
    ViewData["Title"] = "Sign In";
    @model main_project.Models.ViewModels.VM_SignUp;

}

<h1 class="text-4xl font-extrabold text-center mt-16">Đăng ký</h1>
<p class="text-center text-lg mt-3 text-gray-500">Bắt đầu hành tìm kiếm nhà trọ lý tưởng cùng chúng tôi</p>
<form method="post" asp-area="" asp-controller="Auth" asp-action="SignUp"
    class="flex flex-col gap-3 md:w-7/12 bg-purple-300 bg-opacity-65 mx-auto min-w-80 px-5 py-7 rounded-lg mt-12">
    <div class="w-full">
        <label for="email" class="font-bold text-lg text-purple-600">Email</label>
        <input type="text" placeholder="Type your email address" id="email" name="email"
            class="flex w-full h-10 px-3 py-2 text-sm bg-white border rounded-md border-neutral-300 ring-offset-background placeholder:text-neutral-500 focus:border-neutral-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-400 disabled:cursor-not-allowed disabled:opacity-50" />
        <span class="text-sm text-red-500" asp-validation-for="Email"></span>
    </div>
    <div class="w-full">
        <label for="password" class="font-bold text-lg text-purple-600">Password</label>
        <input type="password" placeholder="Type your password" id="password" name="Password"
            class="flex w-full h-10 px-3 py-2 text-sm bg-white border rounded-md border-neutral-300 ring-offset-background placeholder:text-neutral-500 focus:border-neutral-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-400 disabled:cursor-not-allowed disabled:opacity-50" />
        <span class="text-sm text-red-500" asp-validation-for="Password"></span>
    </div>
    <div class="w-full">
        <label for="confirm_password" class="font-bold text-lg text-purple-600">Confirm Password</label>
        <input type="password" placeholder="Re-type your password" id="confirm_password" name="ConfirmPassword"
            class="flex w-full h-10 px-3 py-2 text-sm bg-white border rounded-md border-neutral-300 ring-offset-background placeholder:text-neutral-500 focus:border-neutral-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-neutral-400 disabled:cursor-not-allowed disabled:opacity-50" />
        <span class="text-sm text-red-500" asp-validation-for="ConfirmPassword"></span>
    </div>
    <div class="w-full mt-3">
        Đã có tài khoản? <a asp-area="" asp-controller="Auth" asp-action="SignIn"
            class="text-purple-900 font-semibold">Đăng nhập ngay!</a>
    </div>
    <div class="w-full">
        <button type="submit"
            class="flex w-full items-center justify-center px-4 py-2 text-md font-medium tracking-wide text-white transition-colors duration-200 rounded-md bg-purple-950 hover:bg-purple-900 focus:ring-2 focus:ring-offset-2 focus:ring-purple-900 focus:shadow-outline focus:outline-none">
            Đăng ký
        </button>
    </div>
</form>